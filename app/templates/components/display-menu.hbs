<div ...attributes>
  <div class="menu">
    <div class="bg"></div>
    {{! <img src="/assets/images/circle.svg" class="circle" alt=""/> }}
    <ul class="list">
      <li class="nomovement"><a class="close" href="#!"><i class="fa fa-times-circle-o"></i></a></li>
      <li>{{#link-to "gallery-display.home" invokeAction=(action "closeMenu")}}Home{{/link-to}}</li>
      <li>{{#link-to "gallery-display.display" invokeAction=(action "closeMenu")}}On Display{{/link-to}}</li>
      {{#unless session.isAuthenticated}}
        <li>
          {{#link-to "sign-in" invokeAction="closeMenu"}}
            Sign in
          {{/link-to}}
        </li>
      {{else}}
        <li>{{#link-to "gallery-display.collection" invokeAction=(action "closeMenu")}}Collection{{/link-to}}</li>
      {{/unless}}
      <li class="line nomovement"><a></a></li>
      <li class="nomovement">
        <a href="#!"><i class="fa fa-facebook"></i></a>
        <a href="#!"><i class="fa fa-twitter"></i></a>
        <a href="#!"><i class="fa fa-telegram"></i></a>
      </li>
    </ul>
  </div>
</div>