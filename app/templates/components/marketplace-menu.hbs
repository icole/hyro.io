<div class="menu">
  <div class="bg"></div>
  {{! <img src="/assets/images/circle.svg" class="circle" alt=""/> }}
  <ul class="list">
    <li class="nomovement"><a class="close" href="#!"><i class="fa fa-times-circle-o"/></a></li>
    <li>{{#link-to 'index' invokeAction='closeMenu'}}Home{{/link-to}}</li>
    <li>{{#link-to 'featured-piece' invokeAction='closeMenu'}}Featured Piece{{/link-to}}</li>
    {{#unless session.isAuthenticated}}
      <li>
        {{#link-to 'sign-in' invokeAction='closeMenu'}}
          Sign in
        {{/link-to}}
      </li>
    {{else}}
      <li>{{#link-to 'my-collection' invokeAction='closeMenu'}}My Collection{{/link-to}}</li>
      <li>{{#link-to 'galleries' invokeAction='closeMenu'}}Browse Galleries{{/link-to}}</li>
      <li>{{#link-to 'marketplace' invokeAction='closeMenu'}}Collector Marketplace{{/link-to}}</li>
      <li><a href='#!' {{action "userLogout" }}>Logout</a></li>
    {{/unless}}
    <li class="line nomovement"><a/></li>
    <li class="nomovement">
      <a href="#!"><i class="fa fa-facebook"/></a>
      <a href="#!"><i class="fa fa-twitter"/></a>
      <a href="#!"><i class="fa fa-telegram"/></a>
    </li>
  </ul>
</div>
